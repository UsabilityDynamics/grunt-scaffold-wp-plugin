{
  "name": "{%= github_name %}",
  "version": "{%= version %}",
  "type": "plugin",
  "minimum-stability": "dev",
  "homepage": "http://github.com/UsabilityDynamics/{%= github_short_name %}",
  "author": {
    "name": "UsabilityDynamics, Inc.",
    "url": "https://usabilitydynamics.com/"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://repository.usabilitydynamics.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/UsabilityDynamics/{%= github_short_name %}.git"
  },
  "require": {
    "php": ">=5.3",
    "usabilitydynamics/lib-wp-bootstrap": "1.0.0"
  },
  "autoload": {
    "classmap": [ "lib/classes" ]
  },
  "archive": {
    "exclude": [
      "node_modules",
      ".gitignore",
      "test",
      "circle.yml",
      "composer.lock",
      "gruntfile.js",
      "package.json"
    ]
  },
  "extra": {
    "schemas": {
      "dependencies" : {},
      "plugins" : {},
      "licenses" : {},
      "license" : {}
    }
  }
}