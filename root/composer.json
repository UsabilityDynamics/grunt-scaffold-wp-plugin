{
  "name": "{%= github_vendor %}/{%= github_name %}",
  "version": "{%= version %}",
  "type": "plugin",
  "minimum-stability": "dev",
  "homepage": "http://github.com/{%= github_vendor %}/{%= github_name %}",
  "author": {
    "name": "{%= author_name %}",
    "url": "{%= author_url %}"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://repository.usabilitydynamics.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{%= github_vendor %}/{%= github_name %}.git"
  },
  "require": {
    "php": ">=5.3",
    "usabilitydynamics/lib-wp-bootstrap": "master"
  },
  "require-dev": {
    "usabilitydynamics/lib-wp-phpunit": "master",
    "codeclimate/php-test-reporter": "dev-master"
  },
  "autoload": {
    "classmap": [ "lib/classes" ]
  },
  "archive": {
    "exclude": [
      "node_modules",
      ".gitignore",
      "test",
      "circle.yml",
      "composer.lock",
      "gruntfile.js",
      "package.json"
    ]
  },
  "extra": {
    "schemas": {
      "dependencies" : {
        "modules": {},
        "plugins": {}
      },
      "licenses" : {
        "client" : false,
        "product" : false
      }
    }
  }
}